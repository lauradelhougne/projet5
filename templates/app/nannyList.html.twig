{% extends 'base.html.twig' %}

{% block title %}Choisir une Magic Nounou{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top " id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href=""><img src="{{ asset('img/logoName.png') }}" class="logo" id="logo"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a id="explications" class="nav-link js-scroll-trigger" href="{{ path('index') }}">Mode d'emploi</a>
                    </li>

                    <li class="nav-item">
                        <a id="inscription" class="nav-link js-scroll-trigger" href="{{ path('security_registration') }}" >S'inscrire</a>
                    </li>
                    <li class="nav-item">
                        <a id="connection" class="nav-link js-scroll-trigger" href="{{ path('security_connection') }}" >Connexion</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">Choisir une Magic Nounou</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul>
                        {% if listNanny is not empty %}
                            {% for nanny in listNanny %}
                                <li class="timeline-inverted">
                                    <div class="row align-items">
                                        <div class="timeline-image ">
                                            <img class="rounded-circle img-fluid" src="{{ asset('img/nounou.png') }}" alt="">
                                        </div>
                                        <div class="timeline-panel ">
                                            <div class="timeline-heading">
                                                <h4 class="name">{{ nanny.firstName }} {{ nanny.lastName }}</h4>
                                                <h4><i class="fas fa-map-marker-alt"></i>{{ nanny.city }}</h4>
                                            </div>
                                            <div class="timeline-body">
                                                <p class="text-muted">{{ nanny.description }}</p>
                                                <a href="" class="contactButton">Contacter</a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <p>Nous sommes désolées, mais aucune Nanny n'est disponible pour le moment !</p>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </section>

{% endblock %}