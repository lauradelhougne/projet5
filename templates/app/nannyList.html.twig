{% extends 'base.html.twig' %}

{% block title %}Choisir une Magic Nounou{% endblock %}

{% block body %}
    {% include 'common/navbar.html.twig' %}

    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">Choisir une Magic Nounou</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul>
                        {% if listNanny is not empty %}
                            {% for nanny in listNanny %}
                                <li class="timeline-inverted">
                                    <div class="row align-items">
                                        <div class="timeline-image ">
                                            <img class="rounded-circle img-fluid" src="{{ asset('img/nounou.png') }}" alt="">
                                        </div>
                                        <div class="timeline-panel ">
                                            <div class="timeline-heading">
                                                <h4 class="name">{{ nanny.firstName }} {{ nanny.lastName }}</h4>
                                                <h4><i class="fas fa-map-marker-alt"></i>{{ nanny.city }}</h4>
                                            </div>
                                            <div class="timeline-body">
                                                <p class="text-muted">{{ nanny.description }}</p>
                                                <a href="{{ path('contactNanny', {id: nanny.id}) }}" class="contactButton">Contacter</a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <p>Nous sommes désolées, mais aucune Nanny n'est disponible pour le moment !</p>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </section>

{% endblock %}