{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    {% include 'common/navbar.html.twig' %}

    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">CONNECTION</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="pricing py-5">

        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-5 mb-lg-0">
                        <div class="card-body">
                            <h5 class="card-price text-center">NOUNOU</h5>
                            <hr>
                            <form action="{{ path('security_login') }}" method="POST" class="form-signin">
                                <div class="form-label-group">
                                    <label for="inputEmail">Adresse mail</label>
                                    <input type="email" id="inputEmail" class="form-control" placeholder="votre@mail.fr" name="_username">
                                </div>

                                <div class="form-label-group">
                                    <label for="inputPassword">Mot de passe</label>
                                    <input type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" name="_password" >
                                </div>

                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Se connecter</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            <h5 class="card-price text-center">PARENTS</h5>
                            <hr>
                            <form action="{{ path('parents_login') }}" method="POST" class="form-signin">
                                <div class="form-label-group">
                                    <label for="inputEmail">Adresse mail</label>
                                    <input type="email" id="inputEmail" class="form-control" placeholder="votre@mail.fr" name="_username">
                                </div>

                                <div class="form-label-group">
                                    <label for="inputPassword">Mot de passe</label>
                                    <input type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" name="_password">
                                </div>

                                <button class="btn btn-lg btn-primary btn-block text-uppercase parents" type="submit">Connexion</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>


{% endblock %}
