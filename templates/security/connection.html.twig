{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    {% include 'common/navbar.html.twig' %}

    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">CONNECTION</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="pricing py-5">

        <div class="container">
            <div class="row">
                {% if user == 'nanny' %}
                    {% include 'security/fragments/connection/nannyLoggin.html.twig' %}
                {% elseif user == 'parents' %}
                    {% include 'security/fragments/connection/parentsLoggin.html.twig' %}
                {% endif %}
            </div>
        </div>
    </section>


{% endblock %}
