{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}
    {% include 'common/navbar.html.twig' %}

    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">Mon espace Nounou</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;" alt="logo">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="about">
        <h4 class="titleChild">Mes informations</h4>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 ">
                    {{ form_start(form, {'attr' : {'class': 'contactNanny'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Nom</label>
                                {{ form_widget(form.lastName) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Prénom</label>
                                {{ form_widget(form.firstName) }}
                            </div>
                        </div>
                        <div >
                            <label>Adresse :</label>
                            {{ form_widget(form.address) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Code Postal</label>
                                {{ form_widget(form.postal) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Ville</label>
                                {{ form_widget(form.city) }}
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Téléphone <span class="text-muted"></span></label>
                                {{ form_widget(form.phone) }}
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Diplôme</label>
                                {{ form_widget(form.diploma) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Email <span class="text-muted"></span></label>
                            {{ form_widget(form.email) }}
                        </div>

                        <div class="mb-3">
                            <label>Description <span class="text-muted"></span></label>
                            {{ form_widget(form.description, {'attr': {'rows': 5}}) }}
                        </div>

                        <div class="form-label-group">
                            <label>Modifier le mot de passe</label>
                            {{ form_errors(form.password) }}
                            {{ form_widget(form.password) }}
                        </div>
                        <div class="form-label-group">
                            <label>Confirmation mot de passe</label>
                            {{ form_errors(form.confirm_password) }}
                            {{ form_widget(form.confirm_password) }}
                        </div>
                        <hr>
                        <button class="btn btn-primary btn-lg btn-block submitButton" type="submit">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}