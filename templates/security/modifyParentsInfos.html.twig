{% extends 'base.html.twig' %}

{% block title %}Mes enfants{% endblock %}

{% block body %}
    {% include 'common/navbar.html.twig' %}

    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">Mon espace Parents</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;" alt="logo">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="about">
        <h4 class="titleChild">Mes informations</h4>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 ">
                    <form class="contactNanny" novalidate="">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">Nom</label>
                                <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Prénom</label>
                                <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>
                        </div>
                        <label >Lien de parenté avec l'enfant :</label>

                        <div class="row" style="margin-left: 1em;">
                            <div class="col-md-4 mb-3">
                                <input type="checkbox" class="custom-control-input" id="thursday">
                                <label class="custom-control-label" for="thursday">Mère</label>
                            </div>
                            <div class="col-md-4 mb-3">
                                <input type="checkbox" class="custom-control-input" id="friday">
                                <label class="custom-control-label" for="friday">Père</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="phone">Téléphone <span class="text-muted"></span></label>
                            <input type="phone" class="form-control" id="phone" >
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email">Email <span class="text-muted"></span></label>
                            <input type="email" class="form-control" id="email" placeholder="votre@email.com">
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>

                        <div class="form-label-group">
                            <label for="inputPassword">Modifier le mot de passe</label>
                            <input type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required="">
                        </div>
                        <div class="form-label-group">
                            <label for="inputPassword">Confirmation mot de passe</label>
                            <input type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required="">
                        </div>
                        <hr>
                        <button class="btn btn-primary btn-lg btn-block submitButton" type="submit">Enregistrer</button>

                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}