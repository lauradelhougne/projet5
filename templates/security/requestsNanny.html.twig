{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top " id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href=""><img src="{{ asset('img/logoName.png') }}" class="logo" id="logo" style=" width: 100%;" alt="logoTitle"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a id="explications" class="nav-link js-scroll-trigger" href="{{ path('index') }}">Liste des enfants</a>
                    </li>

                    <li class="nav-item">
                        <a id="inscription" class="nav-link js-scroll-trigger" href="{{ path('security_modifyNannyInfos') }}">Mes informations</a>
                    </li>
                    <li class="nav-item">
                        <a id="inscription" class="nav-link js-scroll-trigger" href="{{ path('security_requestsNanny') }}">Gérer mes demandes</a>
                    </li>
                    <li class="nav-item">
                        <a id="inscription" class="nav-link js-scroll-trigger" href="{{ path('security_logout') }}">Deconnexion</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <header class="currentMasthead" style="background-image: url({{ asset('img/bgstar2.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="site-heading">
                        <span class="subheading">Mon espace Nounou</span>
                        <img src="{{ asset('img/logo2.png') }}" class="logo2" style="width: 20%; margin-bottom: 40px;" alt="logo">

                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="titleChild">Gérer mes demandes</div>
    <section >
        <div class="container">
            <div class="row justify-content-center">
                {% for request in listRequests %}
                    <div class="col-md-8 ">
                        <h4 style="color: #d6004f; margin-bottom: 1em;">Demande du {{ request.dateTime | date("d/m/Y") }} </h4>
                        <form class="contactNanny" novalidate="">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <p>Nom de l'enfant : {{ request.childLastName }} </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <p>Prénom de l'enfant : {{ request.childFirstName }} </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <p>Date de naissance ou terme : {{ request.dateBirth | date("d/m/Y") }} </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <p>Date début de garde souhaitée : {{ request.startDate | date("d/m/Y") }}</p>
                                </div>
                            </div>
                            <p>Jour d'acceuil souhaités :</p>
                                <ul class="col-md-6 mb-3">
                                    {% for day in request.daysChildCare %}
                                        <li>{{ day }}</li>
                                    {% endfor %}
                                </ul>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <p>Nom du parent : {{ request.parentLastName }}</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <p>Prénom du parent : {{ request.parentLastName }}</p>
                                </div>
                            </div>

                            <p>Lien de parenté avec l'enfant : {{ request.relation }}</p>

                            <p>Email : {{ request.email }}</p>
                            <p>Téléphone : {{ request.phone }}</p>

                            <p>Message : {{ request.message }}</p>

                            <div class="row justify-content-center ">
                                <button class="btn btn-primary  submitButton col-md-3" type="submit" style="margin-right: 2em;">Accepter</button>
                                <button class="btn btn-primary  submitButton col-md-3" type="submit">Refuser</button>
                            </div>
                        </form>
                        <hr class="mb-4">
                    </div>
                {% endfor %}
            </div>
        </div>

    </section>

{% endblock %}